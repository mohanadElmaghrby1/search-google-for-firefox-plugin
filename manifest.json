{

  "manifest_version": 2,
  "name": "Search in MCP",
  "description": "Search ",
  "default_locale": "en",
  "version": "1.0",
  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "63.0b14"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },
  
  "permissions": [
    "contextMenus",
    "menus",
    "search",
    "activeTab",
    "clipboardWrite",
    "<all_urls>"
  ],
  
  "icons": {
    "16": "icons/page-16.png",
    "32": "icons/page-32.png",
    "48": "icons/page-48.png"
  }

}